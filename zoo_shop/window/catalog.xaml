            <Button x:Name="btnClose" 
                    Grid.Column="2"
                    Grid.Row="0"
                    Background="{x:Null}"
                    Content="Выход на главную"
                    Margin="20 15"
                    Foreground="WhiteSmoke"
                    FontSize="18" Click="btnClose_Click"/>
        </Grid>
    </Grid>
</Window>
